<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/black"
            android:gravity="bottom|right"
            android:textSize="80dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingRight="15dp"
            android:inputType="number">
        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ac_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="AC"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus_minus_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="115dp"
            android:text="+/-"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/percent_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="215dp"
            android:text="%"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divide_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="315dp"
            android:text="/"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="7"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="100dp"
            android:text="8"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="215dp"
            android:text="9"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mulitply_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="315dp"
            android:text="*"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300dp"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="200dp"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="115dp"
            android:text="5"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="215dp"
            android:text="6"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submission_button"
            android:layout_width="85dp"
            android:layout_marginTop="200dp"
            android:layout_height="85dp"
            android:layout_marginLeft="315dp"
            android:text="-"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="300dp"
            android:text="1"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="115dp"
            android:text="2"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="215dp"
            android:text="3"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_button"
            android:layout_width="85dp"
            android:layout_marginTop="300dp"
            android:layout_height="85dp"
            android:layout_marginLeft="315dp"
            android:text="+"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero_button"
            android:layout_width="185dp"
            android:layout_height="85dp"
            android:layout_marginTop="400dp"
            android:text="0"
            android:gravity="left|center"
            android:paddingLeft="30dp"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/zero_button">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decimal_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="215dp"
            android:text="."
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal_button"
            android:layout_width="85dp"
            android:layout_marginTop="400dp"
            android:layout_height="85dp"
            android:layout_marginLeft="315dp"
            android:text="="
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>