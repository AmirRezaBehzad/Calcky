<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            android:hint="0"
            android:gravity="bottom|right"
            android:textSize="100dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="number">
        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:text="AC"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="100dp"
            android:text="+/-"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="200dp"
            android:text="%"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/other_round_shape">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="300dp"
            android:text="/"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:text="7"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:text="8"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            android:text="9"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="300dp"
            android:text="*"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="200dp"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:text="5"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="200dp"
            android:text="6"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_marginTop="200dp"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="300dp"
            android:text="-"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="300dp"
            android:text="1"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="100dp"
            android:text="2"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="200dp"
            android:text="3"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_marginTop="300dp"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="300dp"
            android:text="+"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="185dp"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="400dp"
            android:text="0"
            android:gravity="left|center"
            android:paddingLeft="30dp"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/zero_button">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_height="@string/width_and_height"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="200dp"
            android:text="."
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_num">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@string/width_and_height"
            android:layout_marginTop="400dp"
            android:layout_height="@string/width_and_height"
            android:layout_marginLeft="300dp"
            android:text="="
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_operator">
        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>